<?xml version="1.0" encoding="utf-8"?>
<!--
首页项目列表item布局
院校项目页列表item布局
项目收藏列表item布局
-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="10dip"
    android:paddingTop="10dip" >

    <ImageView
        android:id="@+id/img_listitem_project_ic"
        android:layout_width="75dip"
        android:layout_height="75dip"
        android:layout_alignParentLeft="true"
        android:layout_centerVertical="true"
        android:src="@drawable/online_image_loading_project_logo"
        android:layout_marginLeft="10dip" />

    <LinearLayout
        android:id="@+id/layout_listitem_project_content"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dip"
        android:layout_marginRight="20dip"
        android:layout_toRightOf="@id/img_listitem_project_ic"
        android:orientation="vertical" >

        <!-- 项目名称 -->

        <TextView
            android:id="@+id/text_listitem_project_name"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/black"
            android:textSize="15sp" />
        <!-- gpa、语言 -->

        <TextView
            android:id="@+id/text_listitem_project_gpa_laguage"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dip"
            android:textColor="@color/grey_projectlisttext"
            android:textSize="13sp" />
        <!-- 学位、国家 -->

        <TextView
            android:id="@+id/text_listitem_project_degree_country"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/grey_projectlisttext"
            android:textSize="13sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/text_listitem_project_tuition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="20dip"
        android:paddingBottom="5dip"
        android:textColor="@color/orange_red"
        android:textSize="16sp" />

</RelativeLayout>