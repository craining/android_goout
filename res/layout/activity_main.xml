<?xml version="1.0" encoding="UTF-8"?> <!-- 主ActivityGroup -->
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/black" >

    <LinearLayout
        android:id="@+id/layout_main_content"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_main"
        android:visibility="gone"
        android:orientation="vertical" >

        <!-- 动态显示不同界面 -->

        <LinearLayout
            android:id="@+id/tab_layout_mainbody"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:orientation="vertical" />

        <!-- 底部功能菜单栏 -->

        <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/tab_layout_bottombody"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="10"
            android:background="@drawable/tabmain_bg"
            android:orientation="horizontal" >

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tab_start"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_tab_start"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/tabmain_ico_start_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_start"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tab_school"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_tab_school"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/tabmain_ico_school_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_school"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>

            <LinearLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/tab_personal"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/img_tab_personal"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="top|center"
                    android:layout_marginTop="5dp"
                    android:src="@drawable/tabmain_ico_personal_n" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/main_personal"
                    android:textColor="@color/white"
                    android:textSize="14sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <!-- 过渡界面 -->

    <LinearLayout
        android:id="@+id/layout_transition"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/black" >

        <ImageView
            android:id="@+id/img_transition"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:scaleType="fitXY"
            android:src="@drawable/bg_transition" />
    </LinearLayout>

</FrameLayout>