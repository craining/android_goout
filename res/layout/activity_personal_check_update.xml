<!-- 版本检测对话框 -->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_check_update_main"
    android:layout_width="250dip"
    android:layout_height="250dip"
    android:background="@android:color/transparent"
    android:orientation="vertical" >

    <!-- 标题栏 -->

    <RelativeLayout
        android:id="@+id/layout_check_update_title"
        android:layout_width="fill_parent"
        android:layout_height="48dip"
        android:layout_alignParentTop="true"
        android:background="@drawable/bg_title"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/img_check_update_back"
            android:layout_width="45dip"
            android:layout_height="fill_parent"
            android:src="@drawable/btn_title_back_selector"
            android:clickable="true"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dip"  />

        <TextView
            android:id="@+id/text_check_update_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:singleLine="true"
            android:text="@string/item_checkupdate_title"
            android:textColor="@color/white"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/layout_check_update_body"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@color/bg_main"
        android:layout_below="@id/layout_check_update_title"
        android:orientation="vertical" >
    </LinearLayout>

</RelativeLayout>